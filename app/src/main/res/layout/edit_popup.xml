<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="#323232"
    >

    <LinearLayout
        android:layout_width="300dp"
        android:padding="16dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Nome da Playlist"
            app:boxStrokeColor="@color/background_color"
            android:textColorHint="@color/white"
            app:startIconTint="@color/white"
            app:startIconDrawable="@drawable/ic_baseline_music_note_24"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtNomePlaylist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Descrição da Playlist"
            app:boxStrokeColor="@color/background_color"
            app:startIconTint="@color/white"
            app:startIconDrawable="@drawable/ic_baseline_description_24"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtDescPlaylist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Cancelar"
                android:layout_marginRight="8dp"
                android:backgroundTint="#AEAEAE"
                android:textColor="@color/black"
                android:id="@+id/btnCancelar"
                />

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Editar"
                android:layout_marginLeft="8dp"
                android:backgroundTint="#84FA7F"
                android:textColor="@color/black"
                android:id="@+id/btnEditar"
                />

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Excluir"
            android:layout_marginTop="20dp"
            android:backgroundTint="#F34646"
            android:textColor="@color/black"
            android:id="@+id/btnExcluir"
            />

    </LinearLayout>


</LinearLayout>